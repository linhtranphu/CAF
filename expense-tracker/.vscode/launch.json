{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Go Backend",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/backend/cmd/main.go",
            "env": {
                "PORT": "8081",
                "MONGODB_URI": "mongodb://localhost:27017",
                "GEMINI_API_KEY": "${env:GEMINI_API_KEY}",
                "SESSION_SECRET": "debug-secret"
            },
            "args": [],
            "showLog": true
        },
        {
            "name": "Debug Go Backend (Container)",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "/workspace",
            "port": 2345,
            "host": "127.0.0.1",
            "showLog": true
        }
    ]
}