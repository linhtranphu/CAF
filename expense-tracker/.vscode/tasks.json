{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Dev Containers",
            "type": "shell",
            "command": "docker-compose",
            "args": ["-f", "docker-compose.dev.yml", "up", "-d"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Stop Dev Containers",
            "type": "shell",
            "command": "docker-compose",
            "args": ["-f", "docker-compose.dev.yml", "down"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Go Backend",
            "type": "shell",
            "command": "go",
            "args": ["run", "cmd/main.go"],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}